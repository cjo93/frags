generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  subscriptionStatus SubscriptionStatus?
  createdAt DateTime  @default(now())
  profiles  Profile[]
}

enum SubscriptionStatus {
  ACTIVE
  TRIALING
  INACTIVE
  CANCELED
}

model Profile {
  id          String     @id @default(cuid())
  userId      String
  displayName String
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  birthData   BirthData?
  fromEdges   FamilyEdge[] @relation("fromEdges")
  toEdges     FamilyEdge[] @relation("toEdges")
  computeRuns ComputeRun[]

  @@index([userId])
  @@unique([userId, displayName])
}

model BirthData {
  profileId String   @id
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  date       DateTime
  time       String?
  tzIana     String
  timeUtc    DateTime?
  latitude   Float?
  longitude  Float?
  altitude   Float?
  fidelity   Fidelity @default(MEDIUM)
}

model FamilyEdge {
  id             String         @id @default(cuid())
  fromProfileId  String
  toProfileId    String
  relationType   FamilyRelation
  label          String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  fromProfile    Profile        @relation("fromEdges", fields: [fromProfileId], references: [id], onDelete: Cascade)
  toProfile      Profile        @relation("toEdges", fields: [toProfileId], references: [id], onDelete: Cascade)

  @@unique([fromProfileId, toProfileId, relationType])
}

enum Fidelity {
  LOW
  MEDIUM
  HIGH
}

enum FamilyRelation {
  PARENT
  CHILD
  SIBLING
  PARTNER
  OTHER
}

model ComputeRun {
  id            String         @id @default(cuid())
  userId        String
  profileId     String
  engine        String         @default("defrag-core")
  engineVersion String
  inputsHash    String
  status        ComputeStatus  @default(PENDING)
  startedAt     DateTime?      @default(now())
  finishedAt    DateTime?
  error         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  profile       Profile        @relation(fields: [profileId], references: [id], onDelete: Cascade)
  artifacts     ComputeArtifact[]

  @@index([userId])
  @@index([profileId, createdAt])
  @@unique([profileId, engineVersion, inputsHash])
}

model ComputeArtifact {
  id            String   @id @default(cuid())
  computeRunId  String
  kind          String
  schemaVersion String
  canonicalJson Json
  rawJson       Json?
  createdAt     DateTime @default(now())
  computeRun    ComputeRun @relation(fields: [computeRunId], references: [id], onDelete: Cascade)

  @@unique([computeRunId, kind, schemaVersion])
}

enum ComputeStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
}

model EphemerisRequest {
  id         String   @id @default(cuid())
  cacheKey   String   @unique
  requestJson Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  cache      EphemerisCache?
}

model EphemerisCache {
  id                 String            @id @default(cuid())
  ephemerisRequestId String            @unique
  rawText            String
  canonicalJson      Json
  canonicalHash      String
  createdAt          DateTime          @default(now())
  request            EphemerisRequest  @relation(fields: [ephemerisRequestId], references: [id], onDelete: Cascade)
}
