# Postgres connection string expected by Prisma
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/frags"

# NextAuth secret + URL for session encryption (replace before deploy)
NEXTAUTH_SECRET="super-secret"
NEXTAUTH_URL="http://localhost:3000"

# Stripe credentials (used in server stubs and webhook signature validation)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Horizons integration (fixtures by default; set HORIZONS_MODE=live when wiring real client)
HORIZONS_MODE="fixtures"

# OpenAI (for AI assistant)
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o-mini"

# Billing / entitlement gating
# - BILLING_MODE=off: no gating
# - BILLING_MODE=allowlist: only allow ENTITLED_USER_IDS
# - BILLING_MODE=db: require User.subscriptionStatus in {ACTIVE,TRIALING}
BILLING_MODE="off"
ENTITLED_USER_IDS=""

# Admin-only entitlement helper route
# Disabled unless explicitly enabled.
ENABLE_ADMIN_ENTITLEMENT="false"
ENTITLEMENT_ADMIN_IDS=""
